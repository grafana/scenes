{
  "extends": "@grafana/tsconfig",
  "compilerOptions": {
    "declarationDir": "./compiled",
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "rootDirs": [
      "."
    ]
  },
  "exclude": [
    "dist/**/*"
  ],
  "include": [
    "utils/**/*.ts*",
    "src/**/*.ts*"
  ],
  "ts-node": {
    "compilerOptions": {
      "isolatedModules": false,
      "module": "commonjs"
    }
  }
}