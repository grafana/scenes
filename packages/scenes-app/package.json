{
  "name": "scenes-app",
  "private": true,
  "version": "1.20.1",
  "author": "Grafana Labs",
  "license": "AGPL-3.0-only",
  "description": "A basic grafana app plugin",
  "scripts": {
    "build": "TS_NODE_PROJECT=\"./.config/webpack/tsconfig.webpack.json\" webpack -c ./.config/webpack/webpack.config.ts --env production",
    "dev": "TS_NODE_PROJECT=\"./.config/webpack/tsconfig.webpack.json\" webpack -w -c ./.config/webpack/webpack.config.ts --env development",
    "e2e": "yarn cypress install && TZ=UTC yarn grafana-e2e run",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --maxWorkers 4",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --config ./.config/.eslintrc --cache --ignore-path ../../.gitignore --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "yarn lint --fix",
    "server": "docker-compose up --build"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@grafana/e2e": "9.2.1",
    "@grafana/e2e-selectors": "10.0.2",
    "@grafana/eslint-config": "5.0.0",
    "@grafana/tsconfig": "1.2.0-rc1",
    "@swc/core": "^1.2.144",
    "@swc/helpers": "^0.3.6",
    "@swc/jest": "^0.2.20",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.19",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "copy-webpack-plugin": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^36.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-webpack-plugin": "^3.1.1",
    "fork-ts-checker-webpack-plugin": "^7.2.0",
    "jest": "27.5.0",
    "prettier": "^2.5.0",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "swc-loader": "^0.1.15",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.4.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-livereload-plugin": "^3.0.2"
  },
  "resolutions": {
    "rxjs": "7.3.0"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@grafana/data": "10.0.3",
    "@grafana/runtime": "10.0.3",
    "@grafana/scenes": "workspace:*",
    "@grafana/schema": "10.0.3",
    "@grafana/ui": "10.0.3",
    "@types/lodash": "latest",
    "react-router-dom": "^5.2.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --config ./.config/.eslintrc --ext .js,.tsx,.ts --cache --fix",
      "prettier --write"
    ],
    "*.{json,scss,md,mdx}": [
      "prettier --write"
    ]
  }
}
